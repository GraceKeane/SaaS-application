<h1>Details about <%= @book.title %> </h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @book.release_date %>
</p>

<br>
<%= link_to 'Edit', edit_book_path(@book), :class => 'btn btn-secondary' %> 
<%= link_to 'Delete', book_path(@book), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-secondary' %>
<%= link_to 'Back', books_path, :class => 'btn btn-secondary' %>
<%= link_to 'Find Books With Same Author', search_similar_books_path(@book.title), :class => 'btn btn-secondary' %>



